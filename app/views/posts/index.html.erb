<% provide(:title, 'Workouts') %>
<div class="wod-display-container">
  <div class="wod-show-container-inner">
<div class="page-header">
<h1>Our current and past workouts</h1>
</div>
<% @posts.each do |post| %>
  <div class="status">
    <h2><%= time_tag(post.created_at.to_date) %></h2> 
    <h5><%= post.title %></h5>
    <p><%= post.content %></p>
    <% image_tag(post.picture_url, :width => 300)if post.picture.present? %>
    <div class="meta">
      <%= link_to "Posted " + time_ago_in_words(post.created_at) + " ago", post, class: 'time-link' %>
      <span>
        <%= link_to "Trainer Notes", post, class: 'btn btn-success' %> 
      </span> 
    </div>
</div>
<% end %>
<%= will_paginate %>
</div>
</div>
